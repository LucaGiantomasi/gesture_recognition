#:kivy 1.0.9

<MovingCircle>:
    canvas:
        Color:
            rgb: 255,0,0
        Ellipse:
            pos: root.pos
            size: 50, 50

<WindowManager>:
    main_window: main_window
    second_window: second_window

    MainWindow:
        id: main_window

    SecondWindow:
        id: second_window

<ImageWidget>:
    Image:
        source: root.source
        allow_stretch: True
        keep_ratio: True
        size: root.width, root.height

<MainWindow>:
    name: "main"
    user_hand: moving_circle

    ImageWidget:
        size: root.width, root.height

    MovingCircle:
        id: moving_circle
        center: root.center

<SecondWindow>:
