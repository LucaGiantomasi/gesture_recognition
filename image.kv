#:kivy 1.0.9

<MovingCircle>:
    canvas:
        Color:
            rgb: 255,0,0
        Ellipse:
            pos: root.pos
            size: 50, 50

<DetailRectangle>:
    canvas:
        Color:
            rgba: 255, 255, 0, 1
        Line:
            width: 2.
            rectangle: (self.x, self.y, self.width, self.height)

<WindowManager>:
    main_window: main_window
    second_window: second_window

    MainWindow:
        id: main_window

    SecondWindow:
        id: second_window

<ImageWidget>:
    Image:
        source: root.source
        allow_stretch: True
        keep_ratio: True
        size: root.width, root.height

<MainWindow>:
    name: "main"
    user_hand: moving_circle

    MovingCircle:
        id: moving_circle
        center: root.center

<SecondWindow>:
    name: "second"

    GridLayout:
        cols: 2
        spacing: [50, 0]
        padding: [50]

        Image:
            source: root.source
            allow_stretch: True
            keep_ratio: True
            size: root.width, root.height

        Label:
            text_size: self.width, None
            size: self.texture_size
            font_size: 40
            text: root.text