#:kivy 1.0.9

<MovingCircle>:
    size: 50, 50 
    canvas:
        Color:
            rgb: 255,0,0
        Ellipse:
            pos: self.pos
            size: self.size

<ImageWidget>:
    Image:
        source: root.source
        allow_stretch: True
        keep_ratio: True
        size: root.width, root.height

<ImageApp>:
    user_hand: moving_circle

    ImageWidget:
        source: root.source
        size: root.width, root.height

    MovingCircle:
        id: moving_circle
        center: self.parent.center
