#:kivy 1.0.9

<MovingCircle>:
    size: 50, 50 
    canvas:
        Color:
            rgb: 255,0,0
        Ellipse:
            pos: self.pos
            size: self.size          

<CalibrationApp>:
    user_hand: moving_circle
    
    FloatLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Ellipse:
                pos: 250, root.height - 250
                size: 50, 50

    FloatLayout: 
        canvas:
            Color:
                rgb: 1, 1, 1
            Ellipse:
                pos: root.width - 250, 250
                size: 50, 50
    
    MovingCircle:
        id: moving_circle
        center: self.parent.center


